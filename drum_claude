<body>
    <div class="container">
        <h1>ü•Å Educational Drum Machine</h1>
        <p class="subtitle">Click squares to create beats ‚Ä¢ Learn rhythm patterns</p>

        <div class="controls">
            <button class="play-btn" onclick="togglePlay()">‚ñ∂ Play</button>
            <button class="stop-btn" onclick="stop()">‚ñ† Stop</button>
            <button class="clear-btn" onclick="clearAll()">Clear All</button>
        </div>

        <div class="tempo-control">
            <label for="tempo">Tempo:</label>
            <input type="range" id="tempo" min="60" max="180" value="120" oninput="updateTempo(this.value)">
            <span class="tempo-value" id="tempoValue">120 BPM</span>
        </div>

        <div class="sequencer" id="sequencer"></div>

        <div class="info">
            <strong>How to use:</strong> Click on the squares to activate drum hits. Press Play to hear your pattern. Each row is a different drum sound, and each column represents a beat in time. Try creating a basic beat by activating the Kick on beats 1, 5, 9, and 13, and the Snare on beats 5 and 13!
        </div>
    </div>

    <script>
        const audioContext = new (window.AudioContext || window.webkitAudioContext)();
        
        const sounds = [
            { name: 'Kick', freq: 150, type: 'kick' },
            { name: 'Snare', freq: 200, type: 'snare' },
            { name: 'Hi-Hat', freq: 300, type: 'hihat' },
            { name: 'Clap', freq: 250, type: 'clap' }
        ];

        const steps = 16;
        let currentStep = 0;
        let isPlaying = false;
        let intervalId = null;
        let tempo = 120;
        
        const pattern = sounds.map(() => Array(steps).fill(false));

        function createSequencer() {
            const sequencer = document.getElementById('sequencer');
            
            sounds.forEach((sound, trackIndex) => {
                const track = document.createElement('div');
                track.className = 'track';
                
                const label = document.createElement('div');
                label.className = 'track-label';
                label.textContent = sound.name;
                track.appendChild(label);
                
                for (let step = 0; step < steps; step++) {
                    const stepEl = document.createElement('div');
                    stepEl.className = 'step';
                    stepEl.dataset.track = trackIndex;
                    stepEl.dataset.step = step;
                    stepEl.onclick = () => toggleStep(trackIndex, step);
                    track.appendChild(stepEl);
                }
                
                sequencer.appendChild(track);
            });
        }

        function toggleStep(track, step) {
            pattern[track][step] = !pattern[track][step];
            updateUI();
        }

        function updateUI() {
            document.querySelectorAll('.step').forEach(el => {
                const track = parseInt(el.dataset.track);
                const step = parseInt(el.dataset.step);
                el.classList.toggle('active', pattern[track][step]);
            });
        }

        function playSound(type, freq) {
            const now = audioContext.currentTime;
            
            if (type === 'kick') {
                const osc = audioContext.createOscillator();
                const gain = audioContext.createGain();
                
                osc.frequency.setValueAtTime(freq, now);
                osc.frequency.exponentialRampToValueAtTime(0.01, now + 0.5);
                
                gain.gain.setValueAtTime(1, now);
                gain.gain.exponentialRampToValueAtTime(0.01, now + 0.5);
                
                osc.connect(gain);
                gain.connect(audioContext.destination);
                
                osc.start(now);
                osc.stop(now + 0.5);
            } else if (type === 'snare') {
                const noise = audioContext.createBufferSource();
                const buffer = audioContext.createBuffer(1, audioContext.sampleRate * 0.2, audioContext.sampleRate);
                const data = buffer.getChannelData(0);
                
                for (let i = 0; i < buffer.length; i++) {
                    data[i] = Math.random() * 2 - 1;
                }
                
                noise.buffer = buffer;
                
                const noiseGain = audioContext.createGain();
                const filter = audioContext.createBiquadFilter();
                filter.type = 'highpass';
                filter.frequency.value = 1000;
                
                noiseGain.gain.setValueAtTime(0.7, now);
                noiseGain.gain.exponentialRampToValueAtTime(0.01, now + 0.2);
                
                noise.connect(filter);
                filter.connect(noiseGain);
                noiseGain.connect(audioContext.destination);
                
                noise.start(now);
            } else if (type === 'hihat') {
                const noise = audioContext.createBufferSource();
                const buffer = audioContext.createBuffer(1, audioContext.sampleRate * 0.05, audioContext.sampleRate);
                const data = buffer.getChannelData(0);
                
                for (let i = 0; i < buffer.length; i++) {
                    data[i] = Math.random() * 2 - 1;
                }
                
                noise.buffer = buffer;
                
                const noiseGain = audioContext.createGain();
                const filter = audioContext.createBiquadFilter();
                filter.type = 'highpass';
                filter.frequency.value = 7000;
                
                noiseGain.gain.setValueAtTime(0.3, now);
                noiseGain.gain.exponentialRampToValueAtTime(0.01, now + 0.05);
                
                noise.connect(filter);
                filter.connect(noiseGain);
                noiseGain.connect(audioContext.destination);
                
                noise.start(now);
            } else if (type === 'clap') {
                for (let i = 0; i < 3; i++) {
                    const noise = audioContext.createBufferSource();
                    const buffer = audioContext.createBuffer(1, audioContext.sampleRate * 0.05, audioContext.sampleRate);
                    const data = buffer.getChannelData(0);
                    
                    for (let j = 0; j < buffer.length; j++) {
                        data[j] = Math.random() * 2 - 1;
                    }
                    
                    noise.buffer = buffer;
                    
                    const noiseGain = audioContext.createGain();
                    const filter = audioContext.createBiquadFilter();
                    filter.type = 'bandpass';
                    filter.frequency.value = 2000;
                    
                    noiseGain.gain.setValueAtTime(0.4, now + i * 0.01);
                    noiseGain.gain.exponentialRampToValueAtTime(0.01, now + i * 0.01 + 0.05);
                    
                    noise.connect(filter);
                    filter.connect(noiseGain);
                    noiseGain.connect(audioContext.destination);
                    
                    noise.start(now + i * 0.01);
                }
            }
        }

        function playStep() {
            document.querySelectorAll('.step').forEach(el => {
                el.classList.remove('playing');
                if (parseInt(el.dataset.step) === currentStep) {
                    el.classList.add('playing');
                }
            });

            sounds.forEach((sound, trackIndex) => {
                if (pattern[trackIndex][currentStep]) {
                    playSound(sound.type, sound.freq);
                }
            });

            currentStep = (currentStep + 1) % steps;
        }

        function togglePlay() {
            if (isPlaying) {
                pause();
            } else {
                play();
            }
        }

        function play() {
            if (audioContext.state === 'suspended') {
                audioContext.resume();
            }
            isPlaying = true;
            const interval = (60 / tempo) * 1000 / 4;
            intervalId = setInterval(playStep, interval);
            document.querySelector('.play-btn').textContent = '‚è∏ Pause';
        }

        function pause() {
            isPlaying = false;
            clearInterval(intervalId);
            document.querySelector('.play-btn').textContent = '‚ñ∂ Play';
        }

        function stop() {
            pause();
            currentStep = 0;
            document.querySelectorAll('.step').forEach(el => {
                el.classList.remove('playing');
            });
        }

        function clearAll() {
            pattern.forEach(track => track.fill(false));
            updateUI();
        }

        function updateTempo(value) {
            tempo = value;
            document.getElementById('tempoValue').textContent = value + ' BPM';
            if (isPlaying) {
                pause();
                play();
            }
        }

        createSequencer();
    </script>
</body>
</html>
